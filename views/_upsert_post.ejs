<h1 class="mt-3 mb-4"><%= post.title ? 'Edit' : 'Add' %> Post</h1>

<form
  method="POST"
  action="/posts<%= post.title ? `/${post._id}?_method=PUT` : '' %>"
>
  <div class="form-group">
    <label class="w-100">
      Title
      <input
        required
        value="<%= post.title %>"
        class="form-control"
        name="title"
      />
    </label>
  </div>
  <div class="form-group">
    <label class="w-100">
      Description
      <textarea name="description" class="form-control">
<%= post.description %></textarea
      >
    </label>
  </div>
  <div class="form-group">
    <label class="w-100">
      Markdown
      <textarea required rows="6" name="markdown" class="form-control">
<%= post.markdown %></textarea
      >
    </label>
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
  <a href="/" class="btn btn-secondary">Cancel</a>
</form>
