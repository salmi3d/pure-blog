<h1 class="mt-3 mb-4">Blog Posts</h1>
<a href="/posts/add" class="btn btn-success">Add Post</a>

<% posts.forEach(post => {%>
<div class="card mt-4">
  <div class="card-body">
    <h2 class="card-title"><%= post.title %></h2>
    <div class="card-subtite text-muted mb-2">
      <%= post.createdAt.toLocaleDateString() %>
    </div>
    <div class="card-text mb-2"><%= post.description %></div>
    <a class="btn btn-info" href="/posts/<%= post.slug %>">Details</a>
    <a class="btn btn-warning" href="/posts/edit/<%= post.id %>">Edit</a>
    <form
      class="d-inline"
      method="POST"
      action="/posts/<%= post.id %>?_method=DELETE"
    >
      <button class="btn btn-danger">Remove</button>
    </form>
  </div>
</div>
<% }) %>
